<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="PO.po.RO.PORORO">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="PO.po.RO.PORORO.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name="PO.po.RO.PORORO.FirebaseDBActivity"/>
        <activity android:name="PO.po.RO.PORORO.FirebaseDBCreateActivity"/>
        <activity android:name="PO.po.RO.PORORO.FirebaseDBReadActivity"/>
        <activity android:name="PO.po.RO.PORORO.FirebaseDBReadSingleActivity"/>

    </application>

</manifest>